#lights {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  pointer-events: none;
}

#lights canvas {
  width: 100% !important;
  height: 100% !important;
}

body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

html, body {
  height: 100%;
}

* {
  box-sizing: border-box;
}